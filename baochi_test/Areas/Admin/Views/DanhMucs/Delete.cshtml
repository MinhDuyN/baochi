@model baochi_test.Models.DanhMuc

@{
    ViewData["Title"] = "Delete Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="DanhMucs" asp-action="Index">Quản lý danh mục</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="DanhMucs" asp-action="Delete">Xóa @Model.Ten</a></li>
    </ol>
    <h6 class="slim-pagetitle">Danh mục</h6>
</div>
<div>
    <div class="section-wrapper mg-t-20">
        <div class="form-layout form-layout-7">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tên danh mục:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" asp-for="Ten" disabled>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Mô tả:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" asp-for="MoTa" disabled>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger bd-0" asp-area="Admin" asp-controller="DanhMucs" asp-action="Delete" asp-route-id="@Model.Id">Xóa</button>
        <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="DanhMucs" asp-action="Index">Trở về</button>
    </form>
</div>
